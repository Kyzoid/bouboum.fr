<%- include('header') %>

<div class="container flex flex-col items-center mx-auto px-4 text-center">
    <h1 class="text-3xl text-green-extinction mb-10">Données à ajouter</h1>
    <form class="flex flex-col items-center w-full text-left">
        <span class="bg-red-900 p-4 rounded text-red-300 hidden mb-6" id="error">Impossible d'envoyer les données. Il faut remplir tous les champs...</span>
        <label class="mb-1" for="write">Write</label>
        <select class="rounded p-1 bg-extinction w-40" name="write" id="write">
            <option value="">-</option>
            <option value="append">Append</option>
            <option value="write">Write</option>
        </select>

        <label class="mb-1 mt-4" for="ranking">Classement</label>
        <select class="rounded p-1 bg-extinction w-40" name="ranking" id="ranking">
            <option value="">-</option>
            <option value="bouboum">Bouboum</option>
            <option value="aaaah">Aaaah !</option>
        </select>

        <label class="mt-4 mb-1" for="textarea">Données</label>
        <textarea id="textarea" class="break-all rounded p-4 h-48 w-9/12 bg-extinction"></textarea>
        <button id="submit"
            class="mt-4 bg-green-extinction hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
            Ajouter
        </button>
    </form>
</div>

<script type="module" src="/javascripts/add-ranking-data.js"></script>
<%- include('footer') %>