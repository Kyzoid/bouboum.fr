<%- include('templates/header') %>
<div class="mt-8 container flex flex-col items-center mx-auto px-4 text-center">
    <div class="flex items-center mb-4">
        <a href="/admin/data?game=bouboum" data-game="bouboum"
            class="export bg-green-extinction text-white font-bold py-2 px-4 rounded mr-4">
            Exporter Bouboum
        </a>
        <a href="/admin/data?game=aaaah" data-game="aaaah"
            class="export bg-green-extinction text-white font-bold py-2 px-4 rounded mr-4">
            Exporter Aaaah !
        </a>
        <a href="/admin/logout" class="bg-red-700 text-white font-bold py-2 px-4 rounded ">
            Déconnexion
        </a>
    </div>
    <div class="w-full bg-extinction p-4 rounded">

        <h1 class="text-3xl text-green-extinction mb-10">Ajouter des données</h1>
        <form class="flex flex-col items-center w-full text-left">
            <span class="bg-red-900 p-4 rounded text-red-300 hidden mb-6" id="error">Impossible d'envoyer les données.
                Il faut remplir tous les champs...</span>
            <label class="mb-1" for="write">Write</label>
            <select class="rounded p-1 bg-extinction-dark w-40" name="write" id="write">
                <option value="">-</option>
                <option value="append">Append</option>
                <option value="write">Write</option>
            </select>

            <label class="mb-1 mt-4" for="ranking">Classement</label>
            <select class="rounded p-1 bg-extinction-dark w-40" name="ranking" id="ranking">
                <option value="">-</option>
                <option value="bouboum">Bouboum</option>
                <option value="aaaah">Aaaah !</option>
            </select>

            <label class="mt-4 mb-1" for="textarea">Données</label>
            <textarea id="textarea" class="break-all rounded p-4 h-48 w-9/12 bg-extinction-dark"></textarea>
            <div class="mt-4">
                <a data-game="bouboum" class="mr-4 show-data bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    Afficher Bouboum
                </a>
                <a data-game="aaaah" class="mr-4 show-data bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    Afficher Aaaah
                </a>
                <button id="submit"
                    class="bg-green-extinction hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Ajouter
                </button>
            </div>
        </form>
    </div>
    <div class="mt-4 w-full bg-extinction p-4 rounded">
        <h1 class="text-3xl text-green-extinction">Utilitaires</h1>
        <div class="flex items-center justify-center mt-4">
            <div class="flex flex-col items-center">
                <span class="mb-1">Classement Bouboum</span>
                <span id="bouboum-sync-response" class="text-xs">Status : Inconnu</span>
                <button data-game="bouboum"
                    class="synchro mt-1 bg-green-extinction text-white font-bold py-2 px-4 rounded">
                    Synchroniser
                </button>
            </div>
            <div class="ml-10 flex flex-col items-center">
                <span class="mb-1">Classement Aaaah !</span>
                <span id="aaaah-sync-response" class="text-xs">Status : Inconnu</span>
                <button data-game="aaaah"
                    class="synchro mt-1 bg-green-extinction text-white font-bold py-2 px-4 rounded">
                    Synchroniser
                </button>
            </div>
        </div>
        <!--
        <br>
        <div class="flex flex-col items-center mt-4">
            <label class="mb-1" for="textarea">Définir l'heure de synchronisation quotidienne automatique</label>
            <small class="mb-1">Format : "hh:mm:ss"</small>
            <input class="mb-2 rounded p-1 bg-extinction-dark w-40 h-8 p-2" type="text">
            <button id="synchro" class="bg-gray-600 text-white font-bold py-2 px-4 rounded">
                Enregistrer
            </button>
        </div>
        -->
    </div>
</div>

<script src="/javascripts/add-ranking-data.min.js"></script>
