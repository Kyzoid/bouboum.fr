<div class="flex justify-center <%= margin %>">
    <nav class="noselect flex items-center justify-between date-pagination m-4 text-green-extinction" style="width: 20rem;">
        <button title="Précédent"
            class="prev uppercase text-2xs text-green-extinction bg-extinction font-bold py-2 px-4 rounded-full inline-flex items-center">
            <img src="/images/left_arrow.svg" alt="left" width="8">
            <span class="ml-1">Précédent</span>
        </button>

        <div class="text-xl ml-5 mr-5"><span class="current-page">1</span><span class="pages-total text-sm">/ 1</span></div>

        <button title="Suivant"
            class="next uppercase text-2xs text-green-extinction bg-extinction font-bold py-2 px-4 rounded-full inline-flex items-center">
            <span class="mr-1">Suivant</span>
            <img src="/images/right_arrow.svg" alt="right" width="8">
        </button>
    </nav>
</div>