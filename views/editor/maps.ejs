<%- include('../templates/header') %>

<div class="mt-8 container mx-auto px-4 items-center text-center">

    <h1 class="text-4xl text-red-extinction mb-10">Liste des cartes</h1>

    <div class="mb-2 flex flex-col items-center mb-6">
        <span>Rechercher</span>
        <div class="flex mt-2">
            <input type="text" id="search" maxlength="37" minlength="4"
                class="overflow-hidden input-text ml-2 bg-extinction text-left flex items-center" style="width: 20rem;"
                placeholder="Titre, auteur, date...">
        </div>
    </div>

    <div class="maps mb-6 flex flex-wrap">
        <% maps.forEach(map => { %>
        <div class="map flex flex-col text-left mb-6 m-2" data-name="<%= map.name %>" data-author="<%= map.author %>"
            data-created-at="<%= map.createdAt %>">
            <div class="download-container">
                <img class="bg-empty-square-extinction" src="<%= map.image %>" alt="<%= map.name %>">
                <a class="rounded p-1 download-top-right" href="<%= map.path %>" download="<%= map.name %>"><img src="/images/download-24px.svg" alt="download"></a>
            </div>
            
            <label class="uppercase mt-1 truncate text-base"><a href="/cartes/<%= map.id %>" class="text-menu-extinction"><%= map.name %></a></label>
            <label class="truncate text-xs">Créé par <span class="text-green-extinction"><%= map.author %></span> •
                <%= map.createdAt %></label>
            <label class="truncate text-xs"></label>
        </div>
        <% }); %>
    </div>


</div>
<script src="/javascripts/search.min.js"></script>
<%- include('../templates/footer') %>
