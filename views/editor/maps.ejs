<%- include('../templates/header') %>

<div class="container mx-auto px-4 text-center">

    <h1 class="text-4xl text-red-extinction mb-10">Liste des cartes</h1>

    <div class="maps mb-6 flex flex-wrap">
        <% maps.forEach(map => { %>
        <div class="map flex flex-col text-left mb-6 m-2">
            <img class="bg-empty-square-extinction" src="<%= map.image %>" alt="<%= map.name %>">
            
            <label class="uppercase mt-1 truncate text-base"><%= map.name %></label>
            <label class="truncate text-xs">Créé par <span class="text-green-extinction"><%= map.author %></span> • <%= map.createdAt %></label>
            <label class="truncate text-xs"></label>
        </div>
        <% }); %>
    </div>


</div>

<%- include('../templates/footer') %>